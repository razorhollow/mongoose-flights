<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<%- include('../partials/nav') %>
<form class="container w-50 mt-5 d-flex align-items-baseline" method="POST" action="/meals" autocomplete="off">
  <div class="row mb-3">
    <label for="meal" class="col-sm-2 col-form-label">Food</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="meal" name="meal">
    </div>
  </div>
  <button type="submit" class="btn btn-primary m-2">Add Choice</button>
</form>
<div class="container d-flex flex-column align-items-center">
  <h3 class="m-5">Existing Meal Choices</h3>
    <select class="form-select mt-3">
    <% meals.forEach(function(meal) { %>
      <option><%= meal.meal %></option>
    <% }) %>
    </select>
</div>
